extends index

block section
    #editAnuncio.modal.fade(tabindex="-1", role="dialog", aria-labelledby="exampleModalLabel", aria-hidden="true")
      .modal-dialog(role="document")
          .modal-content
              .modal-header
                  h5.modal-title#exampleModalLabel AÃ±adir Anuncios
                  button(type="button", data-dismiss="modal", aria-label="Close").close
                      span(aria-hidden="true") &times;
              .modal-body 
                form(id="editAnuncio", action="/api/anuncios", method="post")
                    .form-group
                        label(for='titulo') Titulo
                        input#titulo.form-control(type='text' aria-describedby='emailHelp' placeholder='Enter title' name="titulo")
                        small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
                    .form-group
                        label(for='descripcion') Descripcion
                        textarea#descripcion.form-control(type='text' placeholder='Descripcion' name="descripcion")
                    .form-check
                        input#exampleCheck1.form-check-input(type='checkbox' name="itv" checked="true")
                        label.form-check-label(for='exampleCheck1') ITV
                    input.btn.btn-primary(type="submit", value="Editar")

              .modal-footer
                  button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                  button.btn.btn-primary(type='submit') Save changes
    .container
        

        //-.row
            each anuncio in anuncios
                .col-3
                    .card(style='width: 18rem;')
                    if anuncio.imagen
                        img.card-img-top(src='http://localhost:3000/images/' + anuncio.imagen_id, alt='Card image cap')
                    else
                        img.card-img-top(src='http://localhost:3000/images/noimage.jpg', alt='Card image cap')                        
                    .card-body
                        h5.card-title=anuncio.title
                        p.card-text=anuncio.descripcion
                        a.btn.btn-primary(href='#') Go somewhere
        .row.justify-content-between
            h1 Lista de Anuncios
            button(type="button", data-toggle="modal", data-target="#editAnuncio").btn.btn-primary Edit Anuncio
        .row
            table.table.table-striped.table-dark
                thead
                    tr 
                        th Id
                        th Titulo
                        th ITV
                        th Homologacion
                tbody
                    each anuncio in anuncios
                        tr
                            th=anuncio.id
                            th=anuncio.titulo
                            th
                                if anuncio.itv
                                    input(type="checkbox", name="itv" checked)
                                else
                                    input(type="checkbox", name="itv")
                            th
                                if anuncio.homologacion
                                    input(type="checkbox", name="homologacion" checked)
                                else
                                    input(type="checkbox", name="homologacion")
