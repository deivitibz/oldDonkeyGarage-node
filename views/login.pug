extends layout

block content

    .container
        .login
            .heading
                h2 Sign in
                form#form(action='/admin/check' method="post")
                    .input-group.input-group-lg
                        span.input-group-addon
                            i.fa.fa-user
                        input.form-control(type='text' placeholder='Username or email' name="email")
                    .input-group.input-group-lg
                        span.input-group-addon
                            i.fa.fa-lock
                        input.form-control(type='password' placeholder='Password' name="password")
                    button.float(type='submit') Login
